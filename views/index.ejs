<% include ./partials/header %>

     <header id="jmb" class="jumbotron">
         <div class="container">
             <h1><i class="fa fa-camera" aria-hidden="true"></i> Welcome To WildLife Gallery!</h1>
             <p>WildLife pictures from all over the world</p>
             <p class="text-right">
                <a class="btn btn-primary btn-lg" href="/wilds/new"><i class="fa fa-plus" aria-hidden="true"></i> Add New photo</a>
             </p>
         </div>
     </header>
     
<div style="background-color: #212121;">
    <div class="container">
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
         <% wilds.forEach(function(wild){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail card">
                   <img src="<%= wild.image %>">
                   <div class="caption">
                       <a class="header" href="/wilds/<%= wild._id %>"><%= wild.title %></a>
                   </div>
                    <div class="meta">
                           <span><%= wild.created.toDateString() %></span>
                       </div>
                   <p>
                       <a href="/wilds/<%= wild._id %>" class="btn btn-primary"><i class="fa fa-info" aria-hidden="true"></i> Know More</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
</div>


<% include ./partials/footer%>