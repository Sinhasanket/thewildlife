<% include ./partials/header %>

<div class="container">
    <div class="row">
        <center><h1>Edit <%=wild.title%></h1></center>
        <div style="width: 30%; margin: 25px auto;">
        <form action="/wilds/<%=wild._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label>Title</label>
                <input class="form-control" type="text" name="wild[title]" value="<%=wild.title %>">
            </div>
             <div class="form-group">
                <label>Image</label>
                <input class="form-control" type="text" name="wild[image]" value="<%= wild.image %>">
            </div>
            <!--<div class="form-group">-->
            <!--   <label for="image">Image</label>-->
            <!--   <input id="image" type="file" name="image" accept="image/*" autocomplete="off" required />-->
            <!--</div>-->
             <div class="form-group">
                <label>Blog Content</label>
                <textarea class="form-control" row="25" cols="10" type="text" name="wild[description]" value="<%=wild.description%>"></textarea>
            </div>
            <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Update!</button>
                </div>
        </form>
        <hr class="line">
        <a href="/wilds/<%=wild._id%>">Back!</a>
    </div>
    </div>
</div>


<% include ./partials/footer %>